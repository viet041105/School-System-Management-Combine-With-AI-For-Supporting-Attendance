<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>

    </style>
    @RenderSection("Styles", required: false) 
</head>
<body>
    <div class="sidebar">
        <ul id="student-view" style="display: none">
            <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Overview</a></li>
            <li><a asp-controller="Home" asp-action="TimeTableForStudent"><i class="fa fa-calendar"></i> Time Table</a></li>
            <li><a asp-controller="Home" asp-action="Contact"><i class="far fa-envelope"></i> Contact</a></li>
            <li><a asp-controller="Home" asp-action="About"><i class="far fa-question-circle"></i> About</a></li>
            <li><a id="logout-student" href="#"><i class="fa fa-sign-in-alt"></i> Log out</a></li>
        </ul>
        <ul id="teacher-view" style="display: none">
            <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Overview</a></li>
            <li><a asp-controller="Home" asp-action="TimeTableForTeacher"><i class="fa fa-calendar"></i> Time Table for Teacher</a></li>
            <li><a asp-controller="Home" asp-action="BetaAi"><i class="fas fa-camera"></i> Beta Ai</a></li>
            <li><a asp-controller="Home" asp-action="Contact"><i class="far fa-envelope"></i> Contact</a></li>
            <li><a asp-controller="Home" asp-action="About"><i class="far fa-question-circle"></i> About</a></li>
            <li><a asp-controller="Home" asp-action="VideoStreaming"><i class="far fa-question-circle"></i> Stream</a></li>
            <li><a id="logout-teacher" href="#"><i class="fa fa-sign-in-alt"></i> Log out</a></li>
        </ul>
    </div>
    <div class="main-content">
        @RenderBody()
    </div>
    <!-- Toast notification -->
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="logoutToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <!-- Nội dung toast sẽ được cập nhật động -->
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Đóng"></button>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
    <script>
        var user_role = window.localStorage.getItem("userRole");
        if (user_role == "teacher") {
            $("#student-view").css("display", "none");
            $("#teacher-view").css("display", "block");
        }
        else if (user_role == "student") {
            $("#student-view").css("display", "block");
            $("#teacher-view").css("display", "none");
        }
     
        document.addEventListener("DOMContentLoaded", function () {
            const logoutStudentButton = document.getElementById("logout-student");
            const logoutTeacherButton = document.getElementById("logout-teacher");

            if (logoutStudentButton) {
                logoutStudentButton.addEventListener("click", function () {
                    // Lấy token từ localStorage
                    const token = localStorage.getItem("token");

                    if (!token) {
                        alert("Không tìm thấy token đăng nhập!");
                        return;
                    }
                    logout(token);
                });
            }

            if (logoutTeacherButton) {
                logoutTeacherButton.addEventListener("click", function () {
                    // Lấy token từ localStorage
                    const token = localStorage.getItem("token");

                    if (!token) {
                        alert("Không tìm thấy token đăng nhập!");
                        return;
                    }
                    logout(token);
                });
            }
        });

        function logout(token)
        {
            // Gọi API logout bằng Fetch
            fetch("http://localhost:5243/api/auth/logout", { // Thay đổi URL này nếu cần
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "Authorization": "Bearer " + token
                    }
            })
            .then(response => {
                if (!response.ok) {
                    return response.json().then(errorData => {
                        throw new Error(errorData.message || "Lỗi không xác định");
                    });
                }
                return response.json();
            })
            .then(data => {
                // Cập nhật nội dung toast với thông báo từ API
                const toastElem = document.getElementById("logoutToast");
                toastElem.querySelector(".toast-body").innerText = data.message;

                // Khởi tạo toast và hiển thị nó
                var toast = new bootstrap.Toast(toastElem);
                toast.show();

                // Sau 3 giây, xóa token, user info và chuyển hướng trang
                setTimeout(function() {
                    localStorage.removeItem("token");
                    localStorage.removeItem("userId");
                    localStorage.removeItem("userRole");
                    window.location.href = "/Account/Login";
                }, 3000);
            })
            .catch(error => {
                console.error("Đã xảy ra lỗi khi đăng xuất:", error);
                // Nếu cần, có thể hiện thông báo lỗi bằng toast ở đây
                const toastElem = document.getElementById("logoutToast");
                // Cập nhật kiểu toast thành màu cảnh báo (ví dụ: bg-warning) nếu muốn
                toastElem.classList.remove("text-bg-success");
                toastElem.classList.add("text-bg-danger");
                toastElem.querySelector(".toast-body").innerText = "Đăng xuất thất bại: " + error.message;
                var toast = new bootstrap.Toast(toastElem);
                toast.show();
            });
        }

    </script>

</html>
