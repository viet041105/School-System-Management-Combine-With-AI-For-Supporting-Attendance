@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Điểm danh tích hợp AI</title>

    <!-- Favicon & Icons -->
    <link rel="icon" type="image/png" href="https://cdn.haitrieu.com/wp-content/uploads/2022/12/Icon-Dai-hoc-CMC-1024x683.png" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <ul>
            <li> <a asp-controller="School" asp-action="Index"><i class="fa fa-home"></i> Overview</a></li>
            <li>
                <a asp-controller="School" asp-action="UserManage">
                    <i class="fas fa-users"></i> Users
                </a>
            </li>
            <li>
                <a asp-controller="School" asp-action="SubjectManage">
                    <i class="fas fa-book-open"></i> Subject
                </a>
            </li>
            <li>
                <a asp-controller="School" asp-action="ClassManage">
                    <i class="fas fa-chalkboard-teacher"></i> Class
                </a>
            </li>

            <li><a asp-controller="School" asp-action="ScheduleManage"><i class="fa fa-calendar"></i> Schedule</a></li>
            <li><a id="logout-school" href="#"><i class="fa fa-sign-in-alt"></i> Log out</a></li>

        </ul>
    </div>

    <!-- Main content -->
    <div class="main-content">
        @RenderBody()
    </div>
    <!-- Toast container -->
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="logoutToast" class="toast align-items-center text-bg-success border-0 fade" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Đăng xuất thành công!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Đóng"></button>
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
            const logoutSchoolButton = document.getElementById("logout-school");

            if (logoutSchoolButton) {
                logoutSchoolButton.addEventListener("click", function () {
                    // Lấy token từ localStorage
                    const token = localStorage.getItem("token");

                    if (!token) {
                        alert("Không tìm thấy token đăng nhập!");
                        return;
                    }
                    logout(token);
                });
            }
        });

           function logout(token) {
        // Gọi API logout bằng Fetch
        fetch("http://localhost:5243/api/auth/logout", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
                "Authorization": "Bearer " + token
            }
        })
        .then(response => {
            if (!response.ok) {
                return response.json().then(errorData => {
                    throw new Error(errorData.message || "Lỗi không xác định");
                });
            }
            return response.json();
        })
        .then(data => {
            // Cập nhật nội dung toast với thông báo từ API
            const toastElem = document.getElementById("logoutToast");
            toastElem.querySelector(".toast-body").innerText = data.message;

            // Khởi tạo toast và hiển thị nó
            var toast = new bootstrap.Toast(toastElem);
            toast.show();

            // Sau 3 giây, xóa token, thông tin người dùng và chuyển hướng trang
            setTimeout(function() {
                localStorage.removeItem("token");
                localStorage.removeItem("userId");
                localStorage.removeItem("userRole");
                window.location.href = "/Account/Login";
            }, 3000);
        })
        .catch(error => {
            console.error("Đã xảy ra lỗi khi đăng xuất:", error);
            // Nếu có lỗi, hiển thị thông báo lỗi qua toast
            const toastElem = document.getElementById("logoutToast");
            toastElem.classList.remove("text-bg-success");
            toastElem.classList.add("text-bg-danger");
            toastElem.querySelector(".toast-body").innerText = "Đăng xuất thất bại: " + error.message;
            var toast = new bootstrap.Toast(toastElem);
            toast.show();
        });
    }
</script>
</html>
